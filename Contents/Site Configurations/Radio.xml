<?xml version="1.0" encoding="UTF-8"?>
<site site="radio-canada" 
    plugin="http://publique.radio-canada.ca/audio-video.*player\.swf" 
    initialState="prepare" 
    windowWidth="1280"
	windowHeight="800"
    version="1.0">

 <crop x="0" y="18" width="480" height="269" />
       
<!-- PREPARE -->
<state name="prepare">
    <event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<goto state="playing" />
			</action>
    </event>
</state>
       
 <!-- PLAYING -->
 <state name="playing">
    <event>
        <condition>
            <command name="pause" />
        </condition>
        <action>
            <click x="15" y="304" />
            <goto state="paused" />
        </action>
    </event>
 </state>
 
 <!-- PAUSED -->
 <state name="paused">
    <event>
        <condition>
            <command name="play" />
        </condition>
        <action>
            <click x="15" y="304" />
            <goto state="playing" />
        </action>
    </event>
 </state>
 
</site>