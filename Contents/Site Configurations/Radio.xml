<?xml version="1.0" encoding="UTF-8"?>
<site site="radio-canada" 
    plugin="http://publique.radio-canada.ca/audio-video.*player\.swf" 
    initialState="prepare" 
    windowWidth="1280"
	windowHeight="800"
    version="1.0">

 <crop x="0" y="18" width="480" height="269" />
 
<!-- Set Colors for not Ad-Playing Video -->
 <condition name="notad">
	<color x="195"  y="-18" rgb="626262" />
 </condition>
       
<!-- PREPARE -->
<state name="prepare">
    <event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<goto state="checkad" />
			</action>
    </event>
</state>
       
             
<!-- CHECK AD -->
<state name="checkad">
    <event>
			<condition>
				<condition name="notad" />
			</condition>
			<action>
                <visit url="http://www.radio-canada.ca/audio-video/index.shtml#urlMedia=http://www.radio-canada.ca/util/endirect/CBFTdirect.asx&amp;pos=0" />
				<goto state="prepare" />
			</action>
    </event>
</state>
 
 <!-- PLAYING -->
 <state name="playing">
    <event>
        <condition>
            <command name="pause" />
        </condition>
        <action>
            <click x="15" y="304" />
            <goto state="paused" />
        </action>
    </event>
 </state>
 
 <!-- PAUSED -->
 <state name="paused">
    <event>
        <condition>
            <command name="play" />
        </condition>
        <action>
            <click x="15" y="304" />
            <goto state="playing" />
        </action>
    </event>
 </state>
 
</site>